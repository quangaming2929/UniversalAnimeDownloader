<Window x:Class="UniversalAnimeDownloader.UserControls.SneakyWatcherPasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalAnimeDownloader.UserControls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Authentication required" Height="150" Width="280">
    <Grid>
        <TextBlock Text="Enter Password:" Foreground="Black"/>
        <TextBlock x:Name="debug" Foreground="Black" Margin="30"/>
        <TextBox x:Name="randomCharBox" Style="{x:Null}" Height="24" FontSize="18" Foreground="Black" TextChanged="RandomizeCharacter"/>
        <Button Style="{x:Null}" VerticalAlignment="Bottom" Width="100" Margin="5" 
                HorizontalAlignment="Right" Click="OKButton_Click">
            <TextBlock Text="OK" Foreground="Black" FontSize="12"/>
        </Button>
        <Button Style="{x:Null}" VerticalAlignment="Bottom" Width="100"
                HorizontalAlignment="Left" Margin="5" Click="Clear">
            <TextBlock Text="Clear" Foreground="Black" FontSize="12"/>
        </Button>
    </Grid>
</Window>
